<div class="addmodal-container">
  <h2 class="text-center">新增工作</h2>
  <!-- <div class="col-md-6"> -->
    <%= simple_form_for [:admin, @job] do |f| %>
      <div class="form-inputs">
          <%= f.input :title, :placeholder => "请输入名称", :label => "职位" %>
          <%= f.input :description, as: :ckeditor, :label => "描述" %>
          <%= f.input :wage_upper_bound, :placeholder => "请输入数字", :label => "薪资上限" %>
          <%= f.input :wage_lower_bound, :placeholder => "请输入数字", :label => "薪资下限" %>
          <div>
          <%= f.label :时间 %><br />
          <%= f.date_select :date_of_make %>
          </div><br />
          <%= f.input :contact_email, :label => "企业邮箱" %>
          <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
          <%= f.input :is_hidden, :label => "隐藏" %>
          <%= f.submit "提交" %>
       </div>
    <% end %>
 <!-- </div>  -->
</div>
